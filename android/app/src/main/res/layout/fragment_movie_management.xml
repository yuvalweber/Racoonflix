<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/management_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Movies"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Movie Title -->
        <EditText
            android:id="@+id/edit_movie_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title (required)"
            android:textColorHint="@color/gray"
            android:padding="12dp"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp" />

        <!-- new movie title-->
        <EditText
            android:id="@+id/edit_new_movie_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Movie Title"
            android:textColorHint="@color/gray"
            android:padding="12dp"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp" />

        <!-- Movie Categories -->
        <EditText
            android:id="@+id/edit_movie_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Categories (comma-separated)"
            android:textColorHint="@color/gray"
            android:padding="12dp"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp" />

        <!-- Movie Year -->
        <EditText
            android:id="@+id/edit_movie_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Year"
            android:textColorHint="@color/gray"
            android:inputType="number"
            android:padding="12dp"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp" />

        <!-- Movie Director -->
        <EditText
            android:id="@+id/edit_movie_director"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Director"
            android:textColorHint="@color/gray"
            android:padding="12dp"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp" />

        <!-- Movie Duration -->
        <EditText
            android:id="@+id/edit_movie_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Duration (minutes)"
            android:textColorHint="@color/gray"
            android:inputType="number"
            android:padding="12dp"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp" />

        <!-- Movie Image Selector -->
        <Button
            android:id="@+id/button_select_movie_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Movie Image"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/text_selected_movie_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No image selected"
            android:textColor="@color/gray"
            android:layout_marginBottom="12dp" />

        <!-- Movie Trailer Selector -->
        <Button
            android:id="@+id/button_select_movie_trailer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Movie Trailer"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/text_selected_movie_trailer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No trailer selected"
            android:textColor="@color/gray"
            android:layout_marginBottom="12dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/button_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
